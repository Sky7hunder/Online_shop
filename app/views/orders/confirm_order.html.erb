<div>
  <ul class="confirm-form">
    <%= form_tag confirm_path do %>
      <li><span>Your name: </span><%= text_field_tag :user_name, params[:user_name] %></li>
      <li><span>Your surname: </span><%= text_field_tag :user_surname, params[:user_surname] %></li>
      <li><span>Email: </span><%= text_field_tag :user_email, params[:user_email] %></li>
      <li><span>Phone: </span><%= text_field_tag :user_phone, params[:user_phone] %></li>
      <%= submit_tag 'Confirm' %>
    <% end %>
  </ul>
</div>